{
  "name": "react-vite-ssr",
  "description": "React pattern with vite and ssr page.",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "keywords": [
    "React",
    "Vite",
    "SSR"
  ],
  "author": "Alexander Boev",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=development && npm run server:dev",
    "prod": "npm run lint && npm run build && npm run server:prod",
    "mock": "json-server --watch public/database/db.json -p 4301 -d 0",
    "dev:mock": "concurrently \"npm run dev\" \"npm run mock\"",
    "build": "vite build",
    "server": "node --loader ts-node/esm server/entry-client.tsx",
    "server:dev": "npm run server",
    "server:dev:mock": "concurrently \"npm run server\" \"npm run mock\"",
    "server:prod": "npm run build && cross-env NODE_ENV=production npm run server",
    "server:prod:mock": "concurrently \"npm run build &&  cross-env NODE_ENV=production npm run server\" \"npm run mock\"",
    "lint": "eslint . --max-warnings 0"
  },
  "dependencies": {
    "bootstrap": "^5.3.2",
    "concurrently": "^8.2.1",
    "json-server": "^0.17.4",
    "primeicons": "^6.0.1",
    "primereact": "^10.0.3"
  },
  "devDependencies": {
    "@types/compression": "^1.7.3",
    "@types/express": "^4.17.19",
    "@types/node": "^20.8.6",
    "@types/react": "^18.2.28",
    "@types/react-dom": "^18.2.13",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "@vitejs/plugin-react": "^4.1.0",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "eslint": "^8.51.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.1.3",
    "redux": "^4.2.1",
    "sirv": "^2.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vite": "^4.4.11",
    "vite-plugin-ssr": "^0.4.142"
  }
}
